<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_row_cardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="@color/light_purple"
        app:cardElevation="1dp"
        app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/border"
                android:tint="@color/light_grey"
                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="2dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/light_grey"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp">


                <ImageView
                    android:id="@+id/profilepicimg"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="picture"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/profilepicbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@id/profilepic"
                android:layout_alignTop="@id/profilepic"
                android:layout_alignRight="@id/profilepic"
                android:layout_alignBottom="@id/profilepic"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@null"
                android:visibility="visible" />


            <TextView
                android:id="@+id/Questionaire_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/profilepic"
                android:fontFamily="@font/nunitobold"
                android:text="HIV"
                android:textColor="@color/abit_grey"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/waveorconnectbtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:background="@null"
                android:contentDescription="connect"
                android:src="@drawable/ic_checkbox" />


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Questionaire_bar"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/profilepic"
                android:paddingEnd="64dp"
                android:scrollbars="none">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/interestlinearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="4dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/interest1card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        app:cardBackgroundColor="@color/tertiary_color"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/interest1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:fontFamily="@font/nunitosemibold"
                            android:text="disease 1"
                            android:textColor="@color/secondary_color"
                            android:textSize="10sp" />

                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>