<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context="com.google.ar.core.codelab.fragment.InfoFragment">

    <FrameLayout
        android:id="@+id/fragment_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:font="@font/nunitobold"
        android:fontFamily="@font/nunitobold"
        android:text="Information"
        android:textAlignment="center"
        android:textColor="@color/secondary_color"
        android:textSize="25sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.cardview.widget.CardView
        android:id="@+id/firstCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/infoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/Info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/picturesButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/buttoncard_bg"
                android:padding="10dp"
                android:src="@drawable/ic_info"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/defaultusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/picturesButton"
                android:fontFamily="@font/nunitobold"
                android:text="Information 1"
                android:textColor="@color/abit_grey"
                android:textSize="20sp" />



            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_below="@id/defaultusername"
                android:layout_toEndOf="@id/picturesButton"
                android:layout_marginStart="2dp"
                android:paddingEnd="64dp"
                >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/interestlinearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="4dp"            >


            <androidx.cardview.widget.CardView
                android:id="@+id/interest1card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/tertiary_color"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                >

                <TextView
                    android:id="@+id/interest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="infomation 1"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="10sp"
                    android:textColor="@color/secondary_color"
                    android:layout_marginVertical="4dp"
                    android:layout_marginHorizontal="8dp"
                    />

            </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/secondCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/firstCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/Info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/picturesButton2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/buttoncard_bg"
                android:padding="10dp"
                android:src="@drawable/ic_info"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/defaultusername2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/picturesButton2"
                android:fontFamily="@font/nunitobold"
                android:text="Information 1"
                android:textColor="@color/abit_grey"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_below="@id/defaultusername2"
                android:layout_toEndOf="@id/picturesButton2"
                android:layout_marginStart="2dp"
                android:paddingEnd="64dp"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/interestlinearlayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="4dp"            >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/interest1card2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/tertiary_color"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        >

                        <TextView
                            android:id="@+id/interest2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="infomation 1"
                            android:fontFamily="@font/nunitosemibold"
                            android:textSize="10sp"
                            android:textColor="@color/secondary_color"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            />

                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </HorizontalScrollView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/thirdcardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/secondCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/picturesButton3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/buttoncard_bg"
                android:padding="10dp"
                android:src="@drawable/ic_info"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/defaultusername3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/picturesButton3"
                android:fontFamily="@font/nunitobold"
                android:text="Information 1"
                android:textColor="@color/abit_grey"
                android:textSize="20dp" />



            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_below="@id/defaultusername3"
                android:layout_toEndOf="@id/picturesButton3"
                android:layout_marginStart="2dp"
                android:paddingEnd="64dp"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/interestlinearlayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="4dp"            >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/interest3card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/tertiary_color"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        >

                        <TextView
                            android:id="@+id/interest3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="infomation 1"
                            android:fontFamily="@font/nunitosemibold"
                            android:textSize="10sp"
                            android:textColor="@color/secondary_color"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            />

                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </HorizontalScrollView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/forthCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/thirdcardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/picturesButton4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/buttoncard_bg"
                android:padding="10dp"
                android:src="@drawable/ic_info"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/defaultusername4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/picturesButton4"
                android:fontFamily="@font/nunitobold"
                android:text="Information 1"
                android:textColor="@color/abit_grey"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_below="@id/defaultusername4"
                android:layout_toEndOf="@id/picturesButton4"
                android:layout_marginStart="2dp"
                android:paddingEnd="64dp"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/interestlinearlayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="4dp"            >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/interest4card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/tertiary_color"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        >

                        <TextView
                            android:id="@+id/interest4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="infomation 1"
                            android:fontFamily="@font/nunitosemibold"
                            android:textSize="10sp"
                            android:textColor="@color/secondary_color"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            />

                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
